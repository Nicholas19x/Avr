-- AutoNext.lua
local function setupAutoNext(callback)
    local looping = false

    callback({
        Name = "Auto Next",
        Default = false,
        Save = true,
        Callback = function(value)
            looping = value

            if looping then
                spawn(function()
                    while looping do
                        local args = {
                            [1] = "Next"
                        }
                        game:GetService("ReplicatedStorage").Networking.EndScreen.VoteEvent:FireServer(unpack(args))
                        wait(1)
                    end
                end)
            end
        end
    })
end

return setupAutoNext
